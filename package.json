{
	"name": "url-shortener",
	"version": "1.0.0",
	"description": "URL Shortening Service",
	"main": "app.js",
	"scripts": {
		"test": "xo",
		"start": "node app.js"
	},
	"keywords": [
		"URL",
		"shortener"
	],
	"author": "ChypRiotE",
	"license": "MIT",
	"dependencies": {
		"clipboard": "^1.5.15",
		"hashids": "^1.1.4",
		"milligram": "^1.2.0",
		"minified": "^1.0.1",
		"normalize.css": "^5.0.0"
	},
	"devDependencies": {
		"body-parser": "^1.15.2",
		"express": "^4.14.0",
		"xo": "^0.17.1",
		"mongoose": "^5.7.5"
	},
	"xo": {
		"open": true,
		"ignores": [
			"public/scripts/minified.js"
		],
		"rules": {
			"one-var": [
				2,
				"never"
			],
			"block-scoped-var": 0,
			"spaced-comment": [
				2,
				"never"
			],
			"no-mixed-spaces-and-tabs": [
				2,
				"smart-tabs"
			],
			"linebreak-style": 0
		}
	}
}
